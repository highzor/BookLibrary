
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Регистрация</title>
</head>
<body>
    <div>
        <h3>Форма регистрации клиента</h3>
        <form method="post" action="SignUp">
        
            <table>
                <tr>
                    <td><p>Введите свое имя :</p></td>
                    <td><input type="text" name="Name" /> </td>
                </tr>
                <tr>
                    <td><p>Введите адрес :</p></td>
                    <td>
                        <input type="text" name="Address" />
                    </td>
                </tr>
                <tr>
                    <td><p>Возраст :</p></td>
                    <td>
                        <input type="number" name="Age" />
                    </td>
                </tr>
                <tr><td><input type="submit" value="SignUp" /> </td><td></td></tr>
                <tr>
                    <td><p>Имя</p></td>
                    <td><p>Адрес</p></td>
                    <td><p>Возраст</p></td>
                    <td></td>
                </tr>
                @foreach (var b in ViewBag.Holders)
                {
                    <tr>
                        <td><p>@b.Name</p></td>
                        <td><p>@b.Address</p></td>
                        <td><p>@b.Age</p></td>
                    </tr>
                }
            </table>
        </form>
    </div>
</body>
</html>
